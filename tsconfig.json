{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "ES2018"
    ]
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}